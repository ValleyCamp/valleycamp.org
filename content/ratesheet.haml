-# Block out the existing page elements, and provide some custom classes specifically
-# to make the print view work correctly.
:css
  #ratesheet_printbutton {
    margin-top: 50px;
    text-align: center;
  }
  #ratesheet_container {
    margin-top:50px;
    text-align: center;
    page-break-before: avoid;
    page-break-inside: avoid;
    page-break-after: avoid;
  }
  #ratesheet_container #headerrow {
  }
  #ratesheet_container #leftcol {
    width: 50%;
    float: left;
    padding: 0.5cm;
  }
  #ratesheet_container #rightcol {
    width: 50%;
    float: left;
    padding: 0.5cm;
  }
  #ratesheet_container #footer_row {
    clear: both;
    font-size: 10pt;
  }
  #print_footer {
    display: none;
    clear: both;
    width: 100%;
  }
  .pagetitle {
    font-size: 24pt; 
  }
  .pagesubtitle {
    font-size: 12pt;
  }
  .facilityheader {
    font-size: 16pt;
    font-weight: bold;
    margin-top: 1.25rem;
  }
  .facilitybody {

  }
  .printonly {
    display: none;
  }

  @media print{
    @page { size: auto;  margin: 0mm; }

    #logo, #nav_phonebox, #nav_toplevel, #nav_mustache, #nav_detailed_container, #nav_social_bar{ display: none; }
    #footer, #footer_clear { display: none; }

    body {
      background-color: #ffffff !important;
      color: #000000; 
      margin: 0;
      font: 13pt Georgia, "Times New Roman", Times, serif;
      line-height: 1.3;
    }

    body * {
      visibility: hidden;
    }
    #main_container {
      min-height: 0px !important;
      page-break-after: avoid;
      background-color: #ffffff !important;
    }
    #ratesheet_container {
      visibility: visible; 
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      overflow:hidden;
      margin: 0;
      padding: 1cm;
      background-color: #ffffff !important;
    }
    #ratesheet_container *{
      visibility: visible;
    }

    .pagetitle {

    }
    .pagesubtitle {

    }
    .facilityheader {
      font-size: 18pt;
      font-weight: bold;
      margin-top: 3.50rem;
    }
    .facilitybody {

    }
    #print_footer {
      display: block !important;
      color: #bbb !important;
      font-size: 5pt;
      padding-top: 30px;
    }
    .printonly {
      display: block;
    }
  }

